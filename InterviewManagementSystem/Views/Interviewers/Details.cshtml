@model InterviewManagementSystem.Models.Interviewer

@{
    ViewBag.Title = "Details";
}

@if (User.IsInRole("HR"))
{
    <p>
        @Html.ActionLink("Create Interview", "Create", "Interviews", new { interviewerId = Model.Id }, new { @class = "btn btn-primary" })
    </p>
}

<h2>Details</h2>

<div>
    <h4>Interviewer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
@if (Model.Interviews != null && Model.Interviews.Any())
{
    <p>Interviews:</p>
    <ul>
        @foreach (var item in Model.Interviews)
        {
           <li> @Html.ActionLink(item.Date.ToString("g"), "Details", "Interviews", new { id = item.Id }, null)</li>
        }
    </ul>}
else
{
    <p>No interviews found.</p>
}
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
