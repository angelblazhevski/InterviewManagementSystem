@model IEnumerable<InterviewManagementSystem.Models.Interviewer>

@{
    ViewBag.Title = "Index";
}

<h2>Interviewers</h2>

@if (User.IsInRole("HR"))
{
    <p>
        @Html.ActionLink("Create New Interviewer", "Create")
    </p>
}

<table id="tabela" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    <button interviewer-id="@item.Id" class="btn btn-link js-delete">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $("#tabela").DataTable();
            $(".js-delete").on("click", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this interviewer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/Interviewers/Delete/" + button.attr("interviewer-id"),
                            method: "GET",
                            success: function () {
                                button.parents("tr").remove().draw();
                            }
                        });
                    }
                })
            });
        });
    </script>
}
